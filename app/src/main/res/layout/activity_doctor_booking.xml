<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:background="@drawable/header_back"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    app:civ_border_width="@dimen/_1sdp"
                    android:elevation="@dimen/_10sdp"
                    android:id="@+id/doctorProfileImage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_30sdp"
                    app:civ_border_color="@color/white"
                    android:src="@drawable/doctor_profile"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:elevation="@dimen/_10sdp"
                    app:contentPadding="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_70sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:text="Dr. Jhon Smith"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"/>

                        <TextView
                            android:id="@+id/tvQualification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BSc, MBBS,DDVL ,MD-Dermitologist"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:weightSum="2"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvExperience"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:text="16 yes. Experience"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:text="89% (4394 votes)"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"
                            android:weightSum="4"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@drawable/therapist_img2"/>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:src="@drawable/therapist_img1"/>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:src="@drawable/therapist_img3"/>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:src="@drawable/therapist_img4"/>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/white_back"/>

            </RelativeLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="2"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:text="In Clinic Fees: $10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:text="Book"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_10sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="3"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:text="Closed today"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/tvOpenClosingTime"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:gravity="end"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:text="9:30AM 08:00PM"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:text="All Timing"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_10sdp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="92/6 ,3rd Floor, Outer Road, Chandra Layout"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableLeft="@drawable/edit_location_blue"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"/>

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/map"
                    tools:context=".MapsActivity"
                    android:name="com.google.android.gms.maps.SupportMapFragment" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_feedback"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:text="Give Feedback"/>

                    <TextView
                        android:id="@+id/bt_book"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textStyle="bold"
                        android:background="@drawable/button_back"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:text="Book"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>